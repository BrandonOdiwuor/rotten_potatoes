-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{ :class => if params[:sort_by_title] then 'hilite' end}
        = link_to 'Movie Title', movies_path({:sort_by_title => true}), :id => 'title_header' 
      %th Rating
      %th{  :class => if params[:sort_by_date] then 'hilite' end}
        #release_date_header= link_to 'Release Date', movies_path({:sort_by_date => true})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
